@model Library_Management_System.Models.BookSearch

@{
    ViewBag.Title = "Checkout";
}

<h2>Checkout</h2>

<h3>Are you sure you want to checkout this book?</h3>
<div>
    <h4>BookSearch</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ISBN)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Authors)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Authors)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.availability)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.availability)
        </dd>

    </dl>

    @using (Html.BeginForm("POST"))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            Card Number: <input type="text" name="cardid" /><br>
            <input type="hidden" name="isbn" value="@Html.DisplayFor(model => model.ISBN)">
            <input type="submit" value="Checkout" class="btn btn-success" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <script type="text/javascript">
        alert("@ViewBag.Message");
    </script>
}
